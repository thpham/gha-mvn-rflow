# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Kotlin source files
[*.{kt,kts}]
indent_size = 4

# Java source files
[*.java]
indent_size = 4

# XML and POM files
[*.{xml,pom}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefile requires tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# Properties files
[*.properties]
indent_size = 2
